{
  "name": "@unitedincome/components",
  "description": "Component library for all United Income applications.",
  "author": "United Income <engineering@unitedincome.com>",
  "version": "2.0.2",
  "main": "dist/index.js",
  "types": "dist/components/index.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "start-storybook -p 9001 -c .storybook",
    "build": "yarn buildTypes && yarn buildJs",
    "buildTypes": "tsc --emitDeclarationOnly",
    "buildJs": "webpack",
    "typeCheck": "tsc --noEmit",
    "typeCheckWatch": "yarn typeCheck -- --watch",
    "snapshot": "build-storybook && percy-storybook --widths=320,1280 -s storybook-static",
    "test": "yarn testSingle './{components,proptypes}/**/*.spec.{j,t}s{x,}' | faucet",
    "testCI": "NODE_ENV=test nyc tape -r ./babelRegister.js -r ./utils-for-tests/configureEnzyme.js -r jsdom-global/register -r ignore-styles './{components,proptypes}/**/*.spec.{j,t}s{x,}'  | tap-xunit > ./reports/tape/results.xml",
    "testSingle": "NODE_ENV=test tape -r ./babelRegister.js -r ./utils-for-tests/configureEnzyme.js -r jsdom-global/register -r ignore-styles",
    "coverage": "nyc report",
    "buildStorybook": "build-storybook -c .storybook -o .build",
    "lint": "eslint './components/**/*.{j,t}s{x,}' './proptypes/**/*.js' './.storybook/*.js' --cache && sass-lint -v -q && prettier -l './components/**/*.{j,t}s{x,}' './proptypes/**/*.js' && prettier -l './components/**/*.md' './*.md' --parser=markdown && prettier -l './components/**/*.mdx' './*.mdx' --parser=mdx && prettier -l './components/**/*.scss' './constants/sass/**/*.scss' './constants/sass/*.scss' --parser=scss || (echo need formatting, use yarn format ; exit 1)",
    "format": "prettier --write './components/**/*.{j,t}s{x,}' './proptypes/**/*.js' './.storybook/*.js' && prettier --write  './components/**/*.md' './*.md' --parser=markdown && prettier --write './components/**/*.mdx' './*.mdx' --parser=mdx && sass-lint-auto-fix && prettier --write './components/**/*.scss' './constants/sass/**/*.scss' './constants/sass/*.scss' --parser=scss",
    "generate": "yarn hygen component new",
    "mcgonagall": "yarn hygen mcgonagall new",
    "browserstack": "yarn nightwatch -c nightwatch/config.js",
    "dsm-storybook:publish": "NODE_ENV=dsm dsm-storybook publish",
    "dsm-storybook:preview": "NODE_ENV=dsm dsm-storybook preview"
  },
  "homepage": "https://github.com/UnitedIncome/components",
  "repository": {
    "type": "git",
    "url": "https://github.com/UnitedIncome/components.git"
  },
